<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/layoutBg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_33"
        android:layout_marginEnd="@dimen/dp_16"
        android:background="@drawable/shape_ffddb9_top_10"
        android:gravity="center_vertical"
        android:minWidth="@dimen/dp_103"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tvLabel"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginStart="@dimen/dp_4"
            android:gravity="center_vertical"
            app:srcCompat="@mipmap/ic_setting_file" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTitle"
            style="@style/Text"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_33"
            android:background="@drawable/shape_fff1e3_top_10"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/margin_default_half"
            tools:text="@string/app_name" />

    </LinearLayout>


</layout>
