<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg_login">


        <com.wanwuzhinan.mingchang.view.DefaultToolbar
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_info"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_40"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/toolbar"
            android:layout_marginBottom="@dimen/dp_25"
            android:background="@mipmap/bg_exchange_bg"
            android:paddingVertical="@dimen/dp_20">

            <TextView
                android:id="@+id/tv_record"
                style="@style/text_black_16"
                android:text="兑换记录"
                android:layout_marginEnd="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingVertical="@dimen/dp_6"
                android:paddingHorizontal="@dimen/dp_20"
                android:background="@drawable/shape_4095f2_white_22"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#FF9424"/>

            <TextView
                android:id="@+id/tv_title"
                style="@style/text_black_20"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_50"
                android:textStyle="bold"
                android:text="兑换课程"/>

            <EditText
                android:id="@+id/ed_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:imeOptions="flagNoExtractUi"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/text_black_18"
                android:textColorHint="@color/color_bfbfbf"
                android:hint="请输入兑换码"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="@dimen/dp_100"
                android:background="@drawable/bg_exchange_input"/>

            <TextView
                android:id="@+id/tv_now"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_48"
                style="@style/text_white_16"
                android:text="确定激活"
                android:textColor="#aaaaaa"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_2"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@drawable/shape_c9c6c333_24"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ed_code"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/tv_contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_height="@dimen/dp_82"
            android:layout_width="@dimen/dp_82"
            android:layout_marginEnd="@dimen/dp_23"
            android:layout_marginBottom="@dimen/dp_23"
            android:src="@mipmap/ic_exchange_contact"
            android:textColor="@color/color_4095F2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>




</layout>