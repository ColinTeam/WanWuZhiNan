<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_200"
        android:layout_marginRight="@dimen/dp_12">

        <com.ad.img_load.img.RoundedImageView
            android:id="@+id/riv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/shape_e4e4e4_5"
            app:android_scaleType="6"
            app:layout_constraintDimensionRatio="h,1:0.6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="@dimen/dp_6" />

        <TextView
            android:id="@+id/tv_number"
            style="@style/text_transparent_10"
            android:textFontWeight="300"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/dp_12"
            android:fontFamily="sans-serif-light"
            android:layout_width="@dimen/dp_0"
            app:layout_constraintRight_toRightOf="parent"
            android:text="No.11-18 共8节"/>

        <TextView
            android:id="@+id/tv_first"
            style="@style/text_transparent_14"
            android:layout_marginTop="@dimen/dp_6"
            app:layout_constraintTop_toBottomOf="@+id/tv_number"
            app:layout_constraintLeft_toLeftOf="@id/tv_number"
            app:layout_constraintRight_toRightOf="@id/tv_number"
            android:layout_width="@dimen/dp_0"
            android:text="第一季"/>

        <ImageView
            android:id="@+id/iv_file"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="@dimen/dp_12"
            android:alpha="0.3"
            android:src="@mipmap/ic_audio_film"/>

        <com.ad.img_load.img.RoundedImageView
            android:id="@+id/riv_head"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@drawable/shape_e4e4e4_5"
            app:riv_oval="true"
            app:android_scaleType="6"
            app:layout_constraintTop_toTopOf="@id/iv_file"
            app:layout_constraintBottom_toBottomOf="@id/iv_file"
            app:layout_constraintLeft_toLeftOf="@id/iv_file"
            app:layout_constraintRight_toRightOf="@id/iv_file"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
