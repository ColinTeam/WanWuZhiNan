<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_55"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_16">

                <TextView
                    android:id="@+id/tv_cancel"
                    style="@style/text_333333_16"
                    android:text="取消"
                    android:textColor="@color/color_bfbfbf" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/text_333333_18"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="选择性别" />

                <TextView
                    android:id="@+id/tv_sure"
                    style="@style/text_white_16"
                    android:text="确认"
                    android:textColor="@color/color_1684FC" />
            </LinearLayout>

            <View style="@style/line_dddddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dp_50"
                android:gravity="center"
                android:orientation="horizontal">


                <com.colin.library.android.widget.picker.wheel.WheelView
                    android:id="@+id/wheel_sex"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>