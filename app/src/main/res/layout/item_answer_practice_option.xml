<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


         <TextView
             android:id="@+id/tv_option"
             android:layout_width="@dimen/dp_149"
             android:layout_height="@dimen/dp_104"
             android:layout_marginTop="@dimen/dp_18"
             android:gravity="center"
             style="@style/text_black_14"
             android:text="123"
             android:textColor="#FF9424"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             android:paddingHorizontal="@dimen/dp_20"
             android:paddingTop="@dimen/dp_12"
             android:layout_marginEnd="@dimen/dp_5"
             android:background="@mipmap/ic_question_bg_3"/>

        <ImageView
            android:id="@+id/iv_answer_bg"
            android:layout_width="@dimen/dp_43"
            android:layout_height="@dimen/dp_43"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@mipmap/ic_question_answer_bg_b"/>

        <ImageView
            android:id="@+id/iv_answer"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            app:layout_constraintTop_toTopOf="@+id/iv_answer_bg"
            app:layout_constraintStart_toStartOf="@+id/iv_answer_bg"
            app:layout_constraintEnd_toEndOf="@+id/iv_answer_bg"
            app:layout_constraintBottom_toBottomOf="@+id/iv_answer_bg"
            android:src="@mipmap/ic_question_answer_a"/>

        <ImageView
            android:id="@+id/iv_wrong"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@mipmap/ic_answer_no"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
