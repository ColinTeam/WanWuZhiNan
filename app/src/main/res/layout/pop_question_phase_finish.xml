<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_back"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_230"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_ffffff_15">

            <TextView
                android:id="@+id/tv_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_88"
                style="@style/text_333333_24"
                android:text="50%"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                style="@style/text_333333_14"
                android:text="准确率"
                app:layout_constraintTop_toBottomOf="@+id/tv_pro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            

            <ImageView
                android:id="@+id/iv_ai"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_question_alert_bg"/>

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginStart="@dimen/dp_28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/text_333333_16"
                android:textColor="#FF7E47"
                android:text="休息一下"
                android:gravity="center"
                android:background="@drawable/shape_ffffff_40"/>

            <TextView
                android:id="@+id/tv_sure"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="@dimen/dp_14"
                android:layout_marginEnd="@dimen/dp_28"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/text_white_16"
                android:text="继续学习"
                android:gravity="center"
                android:background="@drawable/shape_ff7e47_20"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="@dimen/dp_276"
            android:layout_height="@dimen/dp_119"
            android:layout_marginTop="@dimen/dp_m_20"
            android:src="@mipmap/ic_question_alert_top"
            app:layout_constraintTop_toTopOf="@+id/ll_back"
            app:layout_constraintStart_toStartOf="@+id/ll_back"
            app:layout_constraintEnd_toEndOf="@+id/ll_back"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>