<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


         <TextView
             android:id="@+id/tv_option"
             android:layout_width="@dimen/dp_0"
             android:layout_height="@dimen/dp_120"
             android:gravity="center"
             style="@style/text_black_14"
             android:text=""
             android:alpha="0.4"
             app:layout_constraintDimensionRatio="w,0.73:1"
             app:layout_constraintTop_toBottomOf="@+id/tv_view"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintRight_toRightOf="parent"
             android:paddingHorizontal="@dimen/dp_12"
             android:background="@drawable/bg_answer_practice_option"/>

        <TextView
            android:id="@+id/tv_block"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            style="@style/text_white_14"
            android:text=""
            android:alpha="0.4"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@mipmap/ic_block_normal"/>

        <TextView
            android:id="@+id/tv_view"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_half"
            app:layout_constraintTop_toTopOf="@id/tv_block"
            app:layout_constraintBottom_toBottomOf="@id/tv_block"
            app:layout_constraintLeft_toLeftOf="@id/tv_block"/>

        <ImageView
            android:id="@+id/iv_wrong"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:visibility="invisible"
            android:layout_marginRight="@dimen/dp_m_10"
            android:layout_marginBottom="@dimen/dp_m_10"
            app:layout_constraintRight_toRightOf="@id/tv_option"
            app:layout_constraintBottom_toBottomOf="@id/tv_option"
            android:src="@mipmap/ic_answer_no"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
