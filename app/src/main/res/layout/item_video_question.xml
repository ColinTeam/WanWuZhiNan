<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop= "@dimen/dp_12"
        android:background="@mipmap/bg_video_question_item"
        android:layout_marginEnd="@dimen/dp_13">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_marginEnd="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@drawable/shape_fffae9_10">

            <com.ad.img_load.img.RoundedImageView
                android:id="@+id/iv_cover"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_height="@dimen/dp_116"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <View
                android:id="@+id/iv_cover_cover"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="@id/iv_cover"
                app:layout_constraintEnd_toEndOf="@id/iv_cover"
                app:layout_constraintTop_toTopOf="@id/iv_cover"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover"
                android:background="#80000000"
                />
            <TextView
                android:id="@+id/tv_cover"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="更新中..."
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="@dimen/sp_15"
                app:layout_constraintStart_toStartOf="@id/iv_cover"
                app:layout_constraintEnd_toEndOf="@id/iv_cover"
                app:layout_constraintTop_toTopOf="@id/iv_cover"
                app:layout_constraintBottom_toBottomOf="@id/iv_cover"
                />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_marginEnd="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                app:layout_constraintEnd_toEndOf="@id/iv_cover"
                app:layout_constraintTop_toTopOf="@id/iv_cover"
                android:src="@mipmap/ic_video_question_play"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_cover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text=""
                android:textFontWeight="600"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                style="@style/text_999999_14"
                android:textColor="#403210"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_marginBottom="@dimen/dp_11"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/ic_time"/>

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textFontWeight="500"
                    android:text="111"
                    android:layout_marginStart="@dimen/dp_5"
                    style="@style/text_999999_12"
                    android:textColor="#746544"/>

                <ImageView
                    android:id="@+id/iv_quest_score_1"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/ic_quest_sorce_n"/>

                <ImageView
                    android:id="@+id/iv_quest_score_2"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/ic_quest_sorce_n"/>

                <ImageView
                    android:id="@+id/iv_quest_score_3"
                    android:layout_width="@dimen/dp_26"
                    android:layout_height="@dimen/dp_22"
                    android:src="@mipmap/ic_quest_sorce_n"/>


            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_top"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="7dp"
            android:layout_marginStart="@dimen/dp_9"
            android:layout_marginEnd="@dimen/dp_9"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/shape_fffae9_10">

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="学而识题"
                android:textFontWeight="500"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_12"
                style="@style/text_999999_14"
                android:textColor="#81765B"/>

            <LinearLayout
                android:id="@+id/ll_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_star_1"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/ic_star_n"/>

                <ImageView
                    android:id="@+id/iv_star_2"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/ic_star_n"/>
                <ImageView
                    android:id="@+id/iv_star_3"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/ic_star_n"/>
                <ImageView
                    android:id="@+id/iv_star_4"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/ic_star_n"/>
                <ImageView
                    android:id="@+id/iv_star_5"
                    android:layout_marginStart="@dimen/dp_8"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:src="@mipmap/ic_star_n"/>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/ll_no_study"
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_24"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_7"
                android:background="@drawable/shape_bfbfbf_15"
                android:layout_marginEnd="@dimen/dp_11"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/dp_11"
                    android:layout_height="@dimen/dp_11"
                    android:layout_marginStart="@dimen/dp_10"
                    android:src="@mipmap/ic_suo"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未学习"
                    android:layout_marginStart="@dimen/dp_6"
                    style="@style/text_white_12"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_answer"
                android:layout_width="@dimen/dp_77"
                android:layout_height="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_7"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@mipmap/ic_question_item_ti_bg"
                android:layout_marginEnd="@dimen/dp_11"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="答题"
                    style="@style/text_white_12"/>

            </LinearLayout>



        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
