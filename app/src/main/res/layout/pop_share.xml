<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl"
                android:layout_width="643dp"
                android:layout_height="@dimen/dp_251"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/shape_fffef4_20">

                <LinearLayout
                    android:id="@+id/ll_title"
                    android:layout_marginTop="@dimen/dp_20"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我在万物指南获得小试牛刀！"
                        style="@style/text_333333_20"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="快来一起看看吧～"
                        style="@style/text_333333_20"
                        android:textColor="#FF9424"
                        android:textStyle="bold"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_back"
                    app:layout_constraintTop_toBottomOf="@+id/ll_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="413dp"
                    android:layout_height="@dimen/dp_133"
                    android:src="@mipmap/ic_share_big"/>

                <ImageView
                    android:id="@+id/iv_cover"
                    android:layout_width="@dimen/dp_133"
                    android:layout_height="@dimen/dp_133"
                    app:layout_constraintStart_toStartOf="@+id/iv_back"
                    app:layout_constraintEnd_toEndOf="@+id/iv_back"
                    app:layout_constraintTop_toTopOf="@+id/iv_back"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_back"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物理十分通，知识很轻松！扫码获取更多资料！"
                    style="@style/text_5d5d5d_14"
                    android:textColor="#706344"
                    android:layout_marginTop="@dimen/dp_17"
                    app:layout_constraintTop_toBottomOf="@id/iv_back"
                    app:layout_constraintStart_toStartOf="@id/iv_back"/>

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="@dimen/dp_62"
                    android:layout_height="@dimen/dp_62"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:layout_marginBottom="@dimen/dp_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="643dp"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <LinearLayout
                    android:id="@+id/ll_save"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:src="@mipmap/ic_share_down"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_white_14"
                        android:textStyle="bold"
                        android:text="下载到本地"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_wx"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:src="@mipmap/ic_share_wx"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_white_14"
                        android:textStyle="bold"
                        android:text="微信好友"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_quan"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/dp_36"
                        android:layout_height="@dimen/dp_36"
                        android:src="@mipmap/ic_share_wx"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/text_white_14"
                        android:textStyle="bold"
                        android:text="朋友圈"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>