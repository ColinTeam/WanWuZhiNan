<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/nav_host"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/app_navigation" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAd"
        android:layout_width="@dimen/dp_108"
        android:layout_height="@dimen/dp_114"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_60"
        android:src="@mipmap/ic_home_ad"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivAdclose"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:padding="@dimen/dp_6"
        android:src="@mipmap/ic_home_ad_close"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/ivAd"
        app:layout_constraintStart_toStartOf="@+id/ivAd"
        app:layout_constraintTop_toBottomOf="@+id/ivAd" />

</androidx.constraintlayout.widget.ConstraintLayout>