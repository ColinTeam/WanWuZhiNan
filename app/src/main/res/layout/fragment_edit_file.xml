<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_bg"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginHorizontal="@dimen/dp_12"
                    android:layout_marginVertical="@dimen/dp_12"
                    android:background="@drawable/shape_ffc285_12_line_1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.colin.library.android.widget.image.RoundImageView
                        android:id="@+id/riv_head"
                        android:layout_width="@dimen/dp_55"
                        android:layout_height="@dimen/dp_55"
                        android:layout_marginStart="@dimen/dp_35"
                        android:layout_marginTop="@dimen/dp_20"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/logo"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:round_oval="true" />

                    <ImageView
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_18"
                        android:src="@mipmap/ic_head_car"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/riv_head"
                        app:layout_constraintEnd_toEndOf="@id/riv_head" />

                    <TextView
                        android:id="@+id/tv_id_t"
                        style="@style/text_333333_16"
                        android:layout_width="@dimen/dp_0"
                        android:layout_marginStart="@dimen/dp_20"
                        android:layout_marginEnd="@dimen/dp_10"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text=""
                        app:layout_constraintBottom_toBottomOf="@+id/riv_head"
                        app:layout_constraintStart_toEndOf="@+id/riv_head"
                        app:layout_constraintTop_toTopOf="@+id/riv_head" />


                    <LinearLayout
                        android:id="@+id/ll_sex"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_30"
                        android:layout_marginStart="@dimen/dp_332"
                        android:layout_marginEnd="@dimen/dp_28"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="@id/riv_head"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/riv_head">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="性别"
                            android:textColor="#FF9424"
                            android:textSize="@dimen/sp_16" />

                        <LinearLayout
                            android:id="@+id/ll_nan"
                            android:layout_width="@dimen/dp_74"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginStart="@dimen/dp_20"
                            android:background="@drawable/bg_sex_click"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_nan"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_10"
                                android:src="@drawable/img_sex_click_nan" />


                            <TextView
                                android:id="@+id/tv_sex_nan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_5"
                                android:text="男生"
                                android:textColor="@drawable/btn_sex_text_selector" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_nv"
                            android:layout_width="@dimen/dp_74"
                            android:layout_height="@dimen/dp_30"
                            android:layout_marginStart="@dimen/dp_14"
                            android:background="@drawable/bg_sex_click"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_nv"
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginStart="@dimen/dp_10"
                                android:src="@drawable/img_sex_click_nv" />


                            <TextView
                                android:id="@+id/tv_sex_nv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_5"
                                android:text="女生"
                                android:textColor="@drawable/btn_sex_text_selector" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="@+id/ll_sex"
                        app:layout_constraintStart_toStartOf="@id/riv_head"
                        app:layout_constraintTop_toBottomOf="@id/riv_head">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="昵称"
                            android:textColor="#FF9424"
                            android:textSize="@dimen/sp_16" />


                        <EditText
                            android:id="@+id/tv_user_name"
                            style="@style/text_333333_14"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_20"
                            android:layout_weight="1"
                            android:background="@drawable/shape_sex_n"
                            android:gravity="right|center_vertical"
                            android:hint="取一个独一无二的昵称吧"
                            android:imeOptions="flagNoExtractUi"
                            android:paddingHorizontal="@dimen/dp_14"
                            android:singleLine="true"
                            android:textColorHint="#40321080" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_address"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_12"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="@+id/ll_sex"
                        app:layout_constraintStart_toStartOf="@id/riv_head"
                        app:layout_constraintTop_toBottomOf="@id/ll_name">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="地区"
                            android:textColor="#FF9424"
                            android:textSize="@dimen/sp_16" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_20"
                            android:background="@drawable/shape_sex_n"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_address"
                                style="@style/text_333333_14"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/dp_6"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:hint="地区"
                                android:imeOptions="flagNoExtractUi"
                                android:singleLine="true"
                                android:textColorHint="#40321080" />

                            <ImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginEnd="@dimen/dp_4"
                                android:src="@mipmap/ic_arrow_main" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_school"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_16"
                        android:gravity="center_vertical"
                        app:layout_constraintEnd_toEndOf="@+id/ll_sex"
                        app:layout_constraintStart_toStartOf="@id/riv_head"
                        app:layout_constraintTop_toBottomOf="@id/ll_address">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="学校"
                            android:textColor="#FF9424"
                            android:textSize="@dimen/sp_16" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_20"
                            android:background="@drawable/shape_sex_n"
                            android:gravity="center_vertical">

                            <EditText
                                android:id="@+id/tv_school"
                                style="@style/text_333333_14"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/dp_6"
                                android:layout_weight="1"
                                android:background="@drawable/shape_sex_n"
                                android:gravity="right|center_vertical"
                                android:hint="学校"
                                android:imeOptions="flagNoExtractUi"
                                android:singleLine="true"
                                android:textColorHint="#40321080" />

                            <ImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginEnd="@dimen/dp_4"
                                android:src="@mipmap/ic_arrow_main" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_year"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_40"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_26"
                        android:gravity="center_vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/ll_sex"
                        app:layout_constraintStart_toStartOf="@id/riv_head"
                        app:layout_constraintTop_toBottomOf="@id/ll_school">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年级"
                            android:textColor="#FF9424"
                            android:textSize="@dimen/sp_16" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/dp_20"
                            android:background="@drawable/shape_sex_n"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_grade"
                                style="@style/text_333333_14"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="@dimen/dp_6"
                                android:layout_weight="1"
                                android:gravity="right|center_vertical"
                                android:hint="年级"
                                android:imeOptions="flagNoExtractUi"
                                android:singleLine="true"
                                android:textColorHint="#40321080" />

                            <ImageView
                                android:layout_width="@dimen/dp_20"
                                android:layout_height="@dimen/dp_20"
                                android:layout_marginEnd="@dimen/dp_4"
                                android:src="@mipmap/ic_arrow_main" />
                        </LinearLayout>


                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_save"
                    style="@style/text_white_18"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="@dimen/dp_46"
                    android:layout_marginTop="@dimen/dp_14"
                    android:background="@drawable/shape_ffd8b0_23"
                    android:gravity="center"
                    android:text="保存"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cl_bg" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</layout>