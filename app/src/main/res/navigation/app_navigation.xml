<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/fragment_splash">


    <fragment
        android:id="@+id/fragment_login"
        android:name="com.wanwuzhinan.mingchang.ui.fragment.LoginFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/fragment_password"
        android:name="com.wanwuzhinan.mingchang.ui.fragment.PasswordFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_password">
        <argument
            android:name="password_type"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/fragment_home"
        android:name="com.wanwuzhinan.mingchang.ui.fragment.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/fragment_video"
        android:name="com.wanwuzhinan.mingchang.ui.fragment.VideoFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_video" />
    <fragment
        android:id="@+id/fragment_audio"
        android:name="com.wanwuzhinan.mingchang.ui.fragment.AudioFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_audio" />
    <fragment
        android:id="@+id/fragment_setting_tab"
        android:name="com.wanwuzhinan.mingchang.ui.fragment.SettingTabFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_setting_tab">
        <argument
            android:name="position"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/fragment_setting_other"
        android:name="com.wanwuzhinan.mingchang.ui.fragment.SettingOtherFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_setting_other" />
    <fragment
        android:id="@+id/fragment_web"
        android:name="com.wanwuzhinan.mingchang.ui.fragment.WebFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_web">
        <argument
            android:name="url_type"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="h5_url"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="web_title"
            app:argType="string"
            app:nullable="true" />
        <argument
            android:name="web_content"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/fragment_splash"
        android:name="com.wanwuzhinan.mingchang.ui.fragment.SplashFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_splash" />
    <action
        android:id="@+id/action_toSplash"
        app:destination="@+id/fragment_splash" />
    <action
        android:id="@+id/action_toLogin"
        app:destination="@+id/fragment_login" />
    <action
        android:id="@+id/action_toPassword"
        app:destination="@+id/fragment_password" />
    <action
        android:id="@+id/action_toHome"
        app:destination="@+id/fragment_home" />
    <action
        android:id="@+id/action_toWeb"
        app:destination="@+id/fragment_web" />
    <action
        android:id="@+id/action_toAudio"
        app:destination="@+id/fragment_audio" />
    <action
        android:id="@+id/action_toVideo"
        app:destination="@+id/fragment_video" />
    <action
        android:id="@+id/action_toSettingTab"
        app:destination="@+id/fragment_setting_tab" />
    <action
        android:id="@+id/action_toSettingOther"
        app:destination="@+id/fragment_setting_other" />
</navigation>