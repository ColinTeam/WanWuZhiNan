<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- styles.xml -->
    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--PopupWindow的弹出和消失动画 中间弹出-->
    <style name="popup_window_center">
        <item name="android:windowEnterAnimation">@anim/pop_in</item>
        <item name="android:windowExitAnimation">@anim/pop_gone</item>
    </style>

    <!--PopupWindow的弹出和消失动画 底部弹出-->
    <style name="popup_window_anim">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="btn_style">
        <item name="normalBackgroundStartColor">#FE420D</item>
        <item name="normalBackgroundCenterColor">#FE1949</item>
        <item name="normalBackgroundEndColor">#FE1949</item>
        <item name="android:windowIsFloating">true</item>
        <item name="normalOrientation">LEFT_RIGHT</item>
        <item name="normalShapeType">LINEAR_GRADIENT</item>
        <item name="normalTextColor">#FFFFFF</item>
        <item name="pressedBackgroundStartColor">#FE420D</item>
        <item name="pressedBackgroundCenterColor">#FE420D</item>
        <item name="pressedBackgroundEndColor">#FE420D</item>
        <item name="pressedTextColor">#FFFFFF</item>
        <item name="unableBackgroundStartColor">#F4F5F6</item>
        <item name="unableBackgroundCenterColor">#F4F5F6</item>
        <item name="unableBackgroundEndColor">#F4F5F6</item>
        <item name="unableTextColor">#CCCCCC</item>
        <item name="is_round">false</item>
        <item name="radius">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:enabled">true</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="btn_style2">
        <item name="normalStrokeColor">#ED1C24</item>
        <item name="normalTextColor">#ED1C24</item>
        <item name="pressedStrokeColor">#ED1C24</item>
        <item name="pressedTextColor">#FFFFFF</item>
        <item name="unableStrokeColor">#CCFFFFFF</item>
        <item name="unableTextColor">#CCFFFFFF</item>
        <item name="normalStrokeWidth">@dimen/dp_1</item>
        <item name="pressedStrokeWidth">@dimen/dp_1</item>
        <item name="unableStrokeWidth">@dimen/dp_1</item>

        <item name="android:windowIsFloating">true</item>
        <item name="normalOrientation">LEFT_RIGHT</item>
        <item name="normalShapeType">LINEAR_GRADIENT</item>

        <item name="is_round">false</item>
        <item name="radius">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:enabled">true</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="btn_style3">
        <item name="normalStrokeColor">#CCCCCC</item>
        <item name="normalTextColor">#FFFFFF</item>
        <item name="pressedStrokeColor">#CCCCCC</item>
        <item name="pressedTextColor">#FFFFFF</item>
        <item name="unableStrokeColor">#CCFFFFFF</item>
        <item name="unableTextColor">#CCFFFFFF</item>
        <item name="normalStrokeWidth">@dimen/dp_1</item>
        <item name="pressedStrokeWidth">@dimen/dp_1</item>
        <item name="unableStrokeWidth">@dimen/dp_1</item>

        <item name="android:windowIsFloating">true</item>
        <item name="normalOrientation">LEFT_RIGHT</item>
        <item name="normalShapeType">LINEAR_GRADIENT</item>

        <item name="is_round">false</item>
        <item name="radius">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:enabled">true</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="btn_style4">
        <item name="normalBackgroundStartColor">#EEEEEE</item>
        <item name="normalBackgroundCenterColor">#EEEEEE</item>
        <item name="normalBackgroundEndColor">#EEEEEE</item>
        <item name="normalTextColor">#666666</item>

        <item name="pressedBackgroundStartColor">#EEEEEE</item>
        <item name="pressedBackgroundCenterColor">#EEEEEE</item>
        <item name="pressedBackgroundEndColor">#EEEEEE</item>
        <item name="pressedTextColor">#666666</item>

        <item name="unableStrokeColor">#CCFFFFFF</item>
        <item name="unableTextColor">#CCFFFFFF</item>
        <item name="normalStrokeWidth">@dimen/dp_1</item>
        <item name="pressedStrokeWidth">@dimen/dp_1</item>
        <item name="unableStrokeWidth">@dimen/dp_1</item>

        <item name="android:windowIsFloating">true</item>
        <item name="normalOrientation">LEFT_RIGHT</item>
        <item name="normalShapeType">LINEAR_GRADIENT</item>

        <item name="is_round">false</item>
        <item name="radius">@dimen/dp_5</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:enabled">true</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="BaseDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowTranslucentStatus">true</item><!-- 解决全屏时状态栏变黑 -->
        <item name="android:backgroundDimEnabled">true</item>   <!-- 是否允许背景模糊 -->
        <item name="android:windowIsTranslucent">true</item>    <!-- 是否半透明 -->
        <item name="android:windowIsFloating">true</item>       <!-- 是否浮现在activity之上 -->
        <item name="android:windowContentOverlay">@null</item>  <!-- 是否有遮盖 -->
        <item name="android:backgroundDimAmount">0.8</item>     <!-- 设置背景模糊的透明度-->
    </style>


    <!--TODO  dialog start-->
    <style name="loadingDialogTheme" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>



    <style name="line_h_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:paddingTop">@dimen/dp_2</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginStart">@dimen/dp_15</item>
        <item name="android:background">#EEEEEE</item>
    </style>

</resources>